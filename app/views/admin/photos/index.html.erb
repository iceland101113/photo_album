<div class="container">
  <div class="row">
    <br>
    <br><br>

    <ul class="nav nav-tabs">
      <li class="active"><a data-toggle="tab" href="#latest-works">Latest Works all view</a></li>
      <li><a data-toggle="tab" href="#special-works">Special Works all view</a></li>
    </ul>
    
    <div class="tab-content">
      <div id="latest-works" class="tab-pane fade in active">
        <br>
        <%= link_to '+', new_admin_photo_path, :class=>"btn btn-default"%>
        <br>
        <br>
        <table class="table table-bordered table-striped table-condensed">
          <thead>
            <tr>
              <th>Title</th>
              <th>Thumbnail</th>
              <th>Update time</th>
              <th>#</th>
            </tr>
          </thead>
          <tbody>
          <% @photos.each do |photo| %>
            <tr>
              <td><%= photo.title %></td>
              <td><%= image_tag photo.file_location , class: "img-responsive center-block", width: '100px' %></td>
              <td><%= photo.updated_at %></td>
              <td><%= link_to '<span class="glyphicon glyphicon-search"></span>'.html_safe, admin_photo_path(photo) %>
                  <%= link_to '<span class="glyphicon glyphicon-pencil"></span>'.html_safe, edit_admin_photo_path(photo) %>
                  <%= link_to '<span class="glyphicon glyphicon-trash"></span>'.html_safe, admin_photo_path(photo), method: :delete, data:{ confirm: "Are you sure?" } %>  
              </td>
            </tr>
          <% end %>
        </tbody>
        </table>

        <div class="text-center">
          <%= paginate @photos %>
        </div>
      </div>
    
      <div id="special-works" class="tab-pane fade">
        <br>
        <%= link_to '+', new_admin_spphoto_path, :class=>"btn btn-default"%>
        <br>
        <br>
        <table class="table table-bordered table-striped table-condensed">
          <thead>
            <tr>
              <th>Title</th>
              <th>Thumbnail</th>
              <th>Update time</th>
              <th>#</th>
            </tr>
          </thead>
          <tbody>
          <% @spphotos.each do |spphoto| %>
            <tr>
              <td><%= spphoto.title %></td>
              <td><%= image_tag spphoto.file_location , class: "img-responsive center-block", width: '100px' %></td>
              <td><%= spphoto.updated_at %></td>
              <td><%= link_to '<span class="glyphicon glyphicon-search"></span>'.html_safe, admin_spphoto_path(spphoto) %>
                  <%= link_to '<span class="glyphicon glyphicon-pencil"></span>'.html_safe, edit_admin_spphoto_path(spphoto) %>
                  <%= link_to '<span class="glyphicon glyphicon-trash"></span>'.html_safe, admin_spphoto_path(spphoto), method: :delete, data:{ confirm: "Are you sure?" } %>  
              </td>
            </tr>
          <% end %>
        </tbody>
        </table>

        <div class="text-center">
          <%= paginate @spphotos %>
        </div>
        <br>
        <br>
        <br>
        <br>
        <br>
        <br>
        <br>
        <br>
        <br>
        <br>
        <br>
        <br>
        <br>

      </div>



    </div>
    
  </div>

</div>
